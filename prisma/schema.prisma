// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model Flavor {
  id      String   @id @default(cuid())
  name    String
  coffees Coffee[]
}

model Coffee {
  id      String   @id @default(cuid())
  name    String
  brand   String
  flavors Flavor[]
}
